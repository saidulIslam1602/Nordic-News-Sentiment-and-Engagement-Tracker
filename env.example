# Nordic News Sentiment & Engagement Tracker Environment Variables

# Database Configuration
DB_TYPE=mssql
MSSQL_SERVER=localhost
MSSQL_PORT=1435
MSSQL_DATABASE=nordic_news_dev
MSSQL_USERNAME=sa
MSSQL_PASSWORD=YourStrong@Passw0rd
MSSQL_DRIVER=ODBC Driver 17 for SQL Server

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# Sentiment Analysis
SENTIMENT_MODEL=vader
SENTIMENT_CONFIDENCE_THRESHOLD=0.7

# GDPR Compliance
GDPR_DATA_RETENTION_DAYS=365
GDPR_ANONYMIZATION_REQUIRED=true
GDPR_CONSENT_REQUIRED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/nordic_news_tracker.log

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_THEME_BASE=light

# News Sources (comma-separated)
NEWS_SOURCES=VG,Aftenposten,Aftonbladet,Svenska Dagbladet,Helsingin Sanomat

# A/B Testing
AB_TEST_DEFAULT_TRAFFIC_SPLIT=0.5
AB_TEST_MINIMUM_SAMPLE_SIZE=1000
AB_TEST_SIGNIFICANCE_LEVEL=0.05